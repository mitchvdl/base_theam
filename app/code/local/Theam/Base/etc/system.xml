<?xml version="1.0" encoding="UTF-8"?>
<config>
    <tabs>
        <theam translate="label" module="theam_base">
            <label>Theam Extensions</label>
            <sort_order>9000</sort_order>
        </theam>
    </tabs>
    <sections>
        <theam_base translate="label" module="theam_base">
            <class>separator-top</class>
            <label>Base</label>
            <tab>theam</tab>
            <frontend_type>text</frontend_type>
            <sort_order>100</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <empty translate="label comment" module="theam_base">
                    <label>Base Module Placeholder</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>100</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <is_enabled translate="label comment" module="theam_base">
                            <label>Enable Base (Demo)</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>100</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </is_enabled>
                    </fields>
                </empty>
            </groups>
        </theam_base>
        <general>
            <groups>
                <store_information>
                    <fields>
                        <display_map translate="label comment">
                            <label>Display Google map on contact page</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </display_map>
                        <longitude translate="label">
                            <label>Store Longitude</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>44</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </longitude>
                        <latitude translate="label">
                            <label>Store Latitude</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>45</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </latitude>
                    </fields>
                </store_information>
            </groups>
        </general>
    </sections>
</config>